<%= render('admin/header') %>
<%= render('admin/sidebar') %>

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">


  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Blog <%= @user %></h1>

    </div>
  </div>
  <!--/.row-->

  <ul class="nav nav-tabs">
    <li role="presentation"><a href="/admin/blog/articles/index">View articles</a></li>
    <li role="presentation" class="active"><a href="/admin/blog/articles/new">New article</a></li>
  </ul>
  <!--/.row-->

  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">Article form</div>
        <div class="panel-body">
          <div class="canvas-wrapper">

            <%= form_tag({:controller => "articles", :action => "create"}, multipart: true) do %>
            <div class="form-group">
              <%= text_field_tag("title", "", :class => "form-control", :placeholder => "Title") %>
            </div>
            <div class="form-group">
              <%= file_field_tag ('picture') %>
            </div>
            <div class="form-group">
              <%= text_area_tag("body", "", :rows => "10", :cols => "80") %>
            </div>


            <script>
                // Replace the <textarea id="editor1"> with a CKEditor
                // instance, using default configuration.
                CKEDITOR.replace('body');
            </script>

            <%= submit_tag("Post", :class => "btn btn-primary") %>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
  <!--/.row-->
</div>