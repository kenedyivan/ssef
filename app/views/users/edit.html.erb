<h1>Users#edit</h1>
<div>
  <h2>Update User</h2>

  <%= form_for(:user, :url => {:action => 'update',:id=>@user.id}) do |f| %>
      <table summary="User form fields">
        <tr>
          <th>Username</th>
          <td><%= f.text_field(:username) %></td>
        </tr>
        <tr>
          <th>Email</th>
          <td><%= f.text_field(:email) %></td>
        </tr>
        <tr>
          <th>Password</th>
          <td><%= f.password_field(:password) %></td>
        </tr>
        <tr>
          <th>Access_level</th>
          <td><%= f.text_field(:access_level) %></td>
        </tr>
        <tr>
          <td><%= submit_tag("Update User") %></td>
        </tr>
      </table>
      </table>
  <%end %>
</div>
